package Principal;

import java.io.*;
import Dados.*;
import metodosOrdenação.*;
import java.util.*;

public class Principal {

	public static void main(String[] args) {
		Item[] vetor500 = new Item [500];
		
		
		try {
			//indica o caminho do arquivo
			FileReader arq = new FileReader("src/Registros/multa500alea.txt");
			//objeto de leitura baseado em um fluxo de entrada
			BufferedReader lerArq = new BufferedReader(arq);
			//receberá a linha a ser lida, através do ReadLine
			String linha = "";
			int cont = 0;
			
			// Leitura da primeira até a última linha
			while ((linha = lerArq.readLine()) != null) {

				//System.out.println("Linha lida: " + linha);

				String[] vetor = linha.split(";");//cada posição do vetor recebe cada conteúdo da linha, respectivamente
				Item x = new Item ();
				
					x.setPlaca(vetor[0]);
					x.setNome(vetor[1]);
					x.setEndereco(vetor[2]);
					x.setData(vetor[3]);
					x.setHora(vetor[4]);
					vetor500 [cont] = x;
					

				cont++;				
			}//fim while
			arq.close();
			
		//	ShellSort ordenaShell = new ShellSort();
		//	ordenaShell.shellSort(vetor500);
			
		//	HeapSort ordenaHeap = new HeapSort();
		//	ordenaHeap.heapSort(vetor500);
			
		//	QuickSort ordenaQuick = new QuickSort();
		//	ordenaQuick.quickSort(vetor500);

			
			
			for (int i = 0; i < vetor500.length; i++) {
				System.out.println(vetor500[i].toString());
			}
			
		} catch (IOException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
	}
}
